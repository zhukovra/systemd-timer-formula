systemd-timer:
  timerExec:
    Description: test with command
    Timer:
      - OnCalendar=*-*-* 23:59:00
    Service:
      - ExecStart=/bin/echo "Hello world"
  timerSource:
    Description: test with upload from source
    Timer:
      - OnBootSec=5m
    Service:
      - ExecStart:
          name: source-script.sh
          source: salt://some/file.sh
  timerPillar:
    Description: test with upload from pillar
    Timer:
      - OnBootSec=5m
    Service:
      - ExecStart:
          name: pillar-script.sh
          contents_pillar: key
